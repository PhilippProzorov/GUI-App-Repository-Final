<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.controllers.MenuController">
    <Button fx:id="startButton" layoutX="169.0" layoutY="300.0" mnemonicParsing="false" onAction="#startGame"
            text="Start">
        <font>
            <Font name="Colibri" size="18.0"/>
        </font>
    </Button>
    <Button fx:id="exitButton" layoutX="174.0" layoutY="345.0" mnemonicParsing="false" onAction="#exitGame" text="Exit">
        <font>
            <Font name="Colibri" size="18.0"/>
        </font>
    </Button>
    <Button fx:id="rulesButton" layoutX="15.0" layoutY="15.0" mnemonicParsing="false" onAction="#rules" text="?">
        <font>
            <Font name="Colibri" size="18.0"/>
        </font>
    </Button>
    <Text fx:id="gameTitle" layoutX="64.0" layoutY="128.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Minesweeper">
        <font>
            <Font name="Colibri" size="48"/>
        </font>
    </Text>
    <TextField fx:id="sizeField" layoutX="34.0" layoutY="250.0" prefHeight="25.0" prefWidth="61.0"
               promptText="Type in size" text="20"/>
    <Label fx:id="tilesCorrect" layoutX="34.0" layoutY="275.0" prefHeight="17.0" prefWidth="210.0" textFill="RED">
        <font>
            <Font size="10.0"/>
        </font>
    </Label>
    <TextField fx:id="mineField" alignment="CENTER_RIGHT" layoutX="314.0" layoutY="250.0" prefHeight="25.0"
               prefWidth="61.0" promptText="Type in size" text="75"/>
    <Text layoutX="48.0" layoutY="246.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Size">
        <font>
            <Font size="15.0"/>
        </font>
    </Text>
    <Label fx:id="minesCorrect" alignment="TOP_RIGHT" layoutX="155.0" layoutY="275.0" prefHeight="17.0" prefWidth="210.0"
           textFill="RED">
        <font>
            <Font size="10.0"/>
        </font>
    </Label>
    <Text layoutX="325.0" layoutY="245.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Mines">
        <font>
            <Font size="15.0"/>
        </font>
    </Text>
</AnchorPane>
